@model ECommerceSample.Areas.Product.ViewModel.TagUpdateViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="UpdateForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly="readonly" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label required"></label>
                <input asp-for="Name" required="required" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $("#UpdateForm").submit(function (e){
        e.preventDefault();
        var Id = $("#Id").val();
        var Name = $("#Name").val();
        if(Name == ""){
            return;
        }
        var data = {
            Id : Id,
            Name : Name,
        }
        $.ajax({
           url : "/api/product/tags/update/"+Id,
           type : "PUT",
           data : JSON.stringify(data),
           contentType: "application/json",
           success : function (){
               alert("Updated Successffully..");
               window.location = ("/product/tag");

           },
           error: function(e){
               alert("Error "+e.responseJSON.title+" ("+e.responseJSON.status+")");
           }
        });
    });
</script>
}
