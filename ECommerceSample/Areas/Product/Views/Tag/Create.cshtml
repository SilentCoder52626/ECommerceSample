@model ECommerceSample.Areas.Product.ViewModel.TagCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="CreateForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label required"></label>
                <input asp-for="Name" required="required" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $("#CreateForm").submit(function (e){
        e.preventDefault();
        var Name = $("#Name").val();

         if(Name == ""){
            return;
           }
        var data = {
            Name : Name,
        }
        $.ajax({
           url : "/api/product/tags/",
           type : "POST",
           data : JSON.stringify(data),
           contentType: "application/json",
           success : function (e){
               alert("Created Successfully with id ("+e.id+")");
               window.location = ("/product/tag");
           },
           error: function(e){
               alert("Error "+e.responseText);
           }
        });
    });
</script>
}
