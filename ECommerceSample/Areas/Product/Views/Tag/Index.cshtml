@model IEnumerable<ECommerceSample.Areas.Product.ViewModel.TagIndexViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tag</h1>

<p>
    <a class="btn btn-primary" asp-controller="Tag" asp-area="Product" asp-action="Create">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>

                </td>
            </tr>
        }
    </tbody>
</table>
